    <authorEmail>support@techstacksolutions.com</authorEmail>
    <authorUrl>http://techstacksolutions.com</authorUrl>
    <version>CVS: 1.0.0</version>
    <description>Testing Component for Joomla.</description>
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <sql>
            <file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
        </sql>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <files folder="site/components/com_techstacktest">
        <filename>index.html</filename>
        <filename>techstacktest.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <media destination="com_techstacktest" folder="media/com_techstacktest">
        <folder>js</folder>
        <folder>css</folder>
        <folder>asset</folder>
        <folder>image</folder>
    </media>
    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_techstacktest.ini</language>
    </languages>
    <administration>
        <menu img="media/com_techstacktest/images/s_com_techstacktest.png" link="option=com_techstacktest&amp;view=subjects" view="subjects" alt="Techstacktest/Default">COM_TECHSTACKTEST</menu>
        <files folder="administrator/components/com_techstacktest">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>techstacktest.php</filename>
            <filename>techstacktest.xml</filename>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
         <!--   <folder>tables</folder> -->
            <folder>views</folder>
        </files>
        <languages folder="administrator/language">
            <language tag="en-GB">en-GB/en-GB.com_techstacktest.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_techstacktest.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search" plugin="techstacktest"/>
    </plugins>
</extension>
