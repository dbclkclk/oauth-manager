<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
            <field name="id" type="text" default="0" label=""
            readonly="true" class="readonly"
            description="" /> 
            
            <field name="name" label="COM_TEACHPRO_FORM_QUESTION_FIELD_QUESTION" description="COM_TEACHPRO_FORM_QUESTION_FIELD_DESC_QUESTION" type="editor"   
                    cols="100"
                    rows="30"
                    id="name"
                    buttons="true"
                   hide="article,readmore,digicom,pagebreak"
                   required="true" filter="raw" />
            
            
             <field name="type" required="true" addfieldpath="/administrator/components/com_teachpro/models/fields"
			type="datalist"
			label="COM_TEACHPRO_FORM_QUESTION_FIELD_TYPE"
			description="COM_TEACHPRO_FORM_QUESTION_FIELD_DESC_TYPE"
			class="inputbox"
			size="1"
                        data-bind="value: type,event:{change:setTypeAnswer}"
			default="">
                        <option>COM_TEACHPRO_FORM_QUESTION_FIELD_TYPE_VALUE_DEFAULT</option>
			<option value="0">COM_TEACHPRO_FORM_QUESTION_FIELD_TYPE_VALUE_MULTIPLE</option>
			<option value="1">COM_TEACHPRO_FORM_QUESTION_FIELD_TYPE_VALUE_SINGLE</option>
            </field> 
            
            <field name="grade" type="text" default="" label="Grade" required="true"  /> 
            
              
            <field name="subject" type="text" default="" label="Subject" required="true"  /> 
            
            
            <field name="goalid" type="text" default="" label="Goal" required="true"  /> 
            
            
        
            
          

            
                  
           <field name="ordering" type="text" default=""   /> 

           
            <field name="state" type="int" default="0" /> 

            <field name="created_by" type="createdby" default="" 
                      /> 

            <field name="modified_by" type="modifiedby" default="" 
                    /> 

            <field name="checked_out" type="hidden"  filter="unset" />

            <field name="checked_out_time" type="hidden"  filter="unset" />
            
            <field name="summaryID" type="sql" id="summary-dropdown" label="Summary" description="" query="SELECT id AS summ_id, description AS summ_desc, text AS summ_text FROM #__teachpro_summary" key_field="summ_id" value_field="summ_desc">
                 <option value="">Choose a Summary</option>
            </field>
            
            <field name="summary-textbox" type="textarea" rows="3" cols="30" label="" readonly="true" class="readonly" description="" value_field="summ_text" />
        
            <field name="DisplaySummary" type="checkbox" class="inputbox" label="Display Summary?" description="" value="false"/>       
        </fieldset>
        
</form>


