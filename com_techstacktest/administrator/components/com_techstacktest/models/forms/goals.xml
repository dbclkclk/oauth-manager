<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
            
            
              <field name="id" type="text" default="0" label="COM_TEACHPRO_FORM_GOAL_FIELD_STUDENTS_ID"
            readonly="true" class="readonly"
            description="COM_TEACHPRO_FORM_GOAL_FIELD_STUDENT_ID_DESC" /> 
            
                <field name="subjectid" type="sql" label="COM_TEACHPRO_FORM_GOAL_FIELD_SUBJECT_LABEL" query="SELECT id, subject_name FROM #__teachpro_subject" key_field="id" value_field="subject_name" required="true">
                    <option value="">Please select a Subject</option>
                </field>
                
                
                <field name="goal_id"
			type="text" required="true"
			label="COM_TEACHPRO_FORM_GOAL_FIELD_GOAL_ID_LABEL"
			description="COM_TEACHPRO_FORM_GOAL_FIELD_GOAL_ID_DESC"
			class="inputbox" size="45"
			labelclass="control-label"
		/> 
                
                 <field name="name" required="true"
			type="text"
			label="COM_TEACHPRO_FORM_GOAL_FIELD_NAME_LABEL"
			description="COM_TEACHPRO_FORM_GOAL_FIELD_GOAL_NAME_DESC"
			class="inputbox" size="45"
			labelclass="control-label"
		/> 
                 
                <field name="description" type="textarea" default="default" label="COM_TEACHPRO_FORM_GOAL_DESCRIPTION_LABEL" description="COM_TEACHPRO_FORM_GOAL_DESCRIPTION_DESC" rows="10" cols="5" />
                
                
                
               <field name="ordering" type="text" default="" label="COM_TEACHPRO_FORM_GOAL_FIELD_ORDERING_ORDERING" description="COM_TEACHPRO_FORM_GOAL_FIELD_ORDERING_ORDERING"  /> 

           
                <field name="state" type="text" default="" /> 

               <field name="created_by" type="createdby" default="" 
                    label="CCOM_TEACHPRO_FORM_GOAL_FIELD_CREATED_BY_LABEL"
                    description="COM_TEACHPRO_FORM_GOAL_FIELD_CREATED_BY_DESC"  /> 

               <field name="modified_by" type="modifiedby" default="" 
                    label="COM_TEACHPRO_FORM_GOAL_FIELD_MODIFIED_BY_LABEL"
                    description="COM_TEACHPRO_FORM_GOAL_FIELD_MODIFIED_BY_DESC"  /> 

                <field name="checked_out" type="hidden" filter="unset" />

                <field name="checked_out_time" type="hidden" filter="unset" />
                
                
                
        </fieldset>
        
</form>