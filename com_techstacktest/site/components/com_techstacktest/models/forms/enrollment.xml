<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        
        
        <fields name="enrollment">
            
            <fieldset name="enrollment">
                
                <field name="id" type="hidden" default="0" label="" readonly="true" class="readonly" description="" /> 
                
                <field name="heard" required="true" addfieldpath="/administrator/components/com_teachpro/models/fields"
                    type="datalist"
                    description="How did you hear about us?"
                    label="How did you hear about us?"
                    data-bind="value: refferal"
                    validate="options"
                    class="required">
                               <option>Choose One</option>

                                <option value="LinkedIn">LinkedIn</option>

                                <option value="Google">Google</option>

                                <option value="Facebook">Facebook</option>

                                <option value="Others">Others</option>
                </field> 

                <field
                    type="text"
                    name="otherReferral"
                    label="Other Referral"
                    class="otherReferral"
                    description="Other Referral"
                     hint="Provide referral site"
                />
                
                 

                

            <!--   <field 
                    name="noCommitmentPaymentMethod" 
                    addfieldpath="/administrator/components/com_teachpro/models/fields"
                    type="datalist" data-bind="value: noCommitmentPaymentMethod"
                    description="Please choose how you want to pay."
                    label="Please choose how you want to pay:"
                    validate="options"
                    class="noCommitmentPaymentMethod"
                >

                    <option>Please choose how you want to pay</option>

                    <option value="weekly_payment" >Weekly Payment</option>

                    <option value="biweekly_payment">Bi-Weekly Payment</option>

                    <option value="monthly_payment">Monthly Payment</option>

                    <option value="all_at_once_payments">All at Once Pyament</option>

                </field>
                
                -->

                
                
                <field
                    type="hidden"
                    name="student_subject_id"
                    label="Student Subject ID"
                    description="Student Subject ID"
                    required="true"
                    class="required"
                />
                
            </fieldset>
            
        </fields>
        
        
        <fields name="paymentterms">
            
            <fieldset name="paymentterms">
                
                 <field
                    type="hidden"
                    name="id"
                    description="paymnttermsid"
                   
                />

                 
                  <field
                    type="hidden"
                    name="enrollment_id"
                    description="paymnttermsid"
                   
                />
                  
                  
                   <field
             type="customtext"
            addfieldpath="/administrator/components/com_teachpro/models/fields"
            name="total_cost"
            label="Total Amount"
            readonly="true"
            description="Total Amount"
            class="totalAmount"
             databind="value:totalPayment"
        />
                
                
                <field
                    type="customnumber"
                    addfieldpath="/administrator/components/com_teachpro/models/fields"
                    name="total_weeks_for_sessions"
                    label="How many weeks you want the sessions?"
                    description="How many weeks you want the sessions?"
                    class="sessionWeek"
                    default="1"
                    min="1"
                    max="20"
                    step="1"
                    databind="value:totalWeeksforSessions"
                />
                
                <field name="signupterms" 
                    addfieldpath="/administrator/components/com_teachpro/models/fields"
                    type="datalist"
                    description="Type of Session"
                    label="Type of Session"
                    validate="options"
                    data-bind="value: typeOfSession">
                    <option>Select</option>
                    <option value="commitment">Commitment</option>
                    <option value="noCommitment">No Commitment</option>
                </field>

                <field name="payment_frequency"  addfieldpath="/administrator/components/com_teachpro/models/fields"
                    type="datalist" data-bind="value: paymentMethod" description="Please choose how you want to pay." label="Please choose how you want to pay:" validate="options" class="paymentMethod">
                    <option>Please choose how you want to pay</option>
                    <option value="weekly_payment">Weekly Payment</option>
                    <option value="biweekly_payment">Bi-Weekly Payment</option>
                    <option value="monthly_payment">Monthly Payment</option>
                    <option value="all_at_once_payments">All at Once Pyament</option>
                </field>
                
                
                <field
                    addfieldpath="/administrator/components/com_teachpro/models/fields"
                    type="customnumber"
                    name="sessions_per_week"
                    label="No. of Sessions Per Week"
                    min="2"
                    max="5"
                    default="0"
                    readonly="true"
                    databind="value:sessionsPerWeek"
                    description="No. of Sessions Per Week"
                    class="numberOfSessionsPerWeek"
                />
                
            </fieldset>
        </fields>
        
        
        <fields name="parent">
            <fieldset name="parent">
                
                <field name="id" type="hidden" default="0" label=""
                readonly="true" class="readonly"
                description="" /> 
        
                <field 
                    type="text"
                    name="parent_full_name"
                    label="Parent's Name"
                    description="Enter Parent's Name"
                    required="true"
                    class="required"
                />

                <field 
                    type="text"
                    name="parent_occupation"
                    label="Parent's Occupation"
                    description="Enter Parent's Occupation"
                    required="true"
                    class="required"
                />

                <field 
                    type="text"
                    name="parent_cell_number"
                    label="Parent's Cell Number"
                    description="Enter Parent's Cell Number"
                    required="true"
                    class="required"
                />

                <field 
                    type="email"
                    name="parent_email"
                    label="Parent's Email"
                    description="Enter Parent's Email"
                    required="true"
                    validate="email"
                    class="required validate-email"
                />

                <field 
                    type="text"
                    name="parent_address"
                    label="Parent's Address"
                    description="Enter Parent's Address"
                    required="true"
                    class="required"
                />

                <field 
                    type="text"
                    name="parent_employer"
                    label="Parent's Employer"
                    description="Enter Parent's Employer"
                    required="true"
                    class="required"
                />
            </fieldset>
        </fields>
        
        <fields name="spouse">
            <fieldset name="spouse">
                
                    <field name="id" type="hidden" default="0" label=""
                readonly="true" class="readonly"
                description="" /> 
                    <field 
                        type="text"
                        name="spouseName"
                        label="Spouse's Name"
                        description="Enter Spouse's Name"
                        required="false"
                    />

                    <field 
                        type="text"
                        name="spouseOccupation"
                        label="Spouse's Occupation"
                        description="Enter Spouse's Occupation"
                        required="false"
                    />

                    <field 
                        type="text"
                        name="spouseCellNumber"
                        label="Spouse's Cell Number"
                        description="Enter Spouse's Cell Number"
                        required="false"
                    />

                    <field 
                        type="email"
                        name="spouseEmail"
                        label="Spouse's Email"
                        description="Enter Spouse's Email"
                        required="false"
                        validate="email"
                        class="required validate-email"
                    />

                    <field 
                        type="text"
                        name="spouseAddress"
                        label="Spouse's Address"
                        description="Enter Spouse's Address"
                        required="false"
                        class="required"
                    />

                    <field 
                        type="text"
                        name="spouseEmployer"
                        label="Spouse's Employer"
                        description="Enter Spouse's Employer"
                        required="false"
                        class="required"
                    />
                    

                   
            </fieldset>
        </fields>
        
        <fields name="subjectstudent">
            
            <fieldsset name="subjectstudent">
                
                
                <field name="id" type="hidden" default="0" label=""
                readonly="true" class="readonly"
                description="" /> 
                
                
                <field 
                        type="text"
                        name="schoolName"
                        label="School Name"
                        description="Enter School Name"
                        required="true"
                        class="required"
                    />
                
                 <field 
                        type="radio"
                        name="studentType"
                        label="Student Type"
                        description="Choose Student Type"
                        required="true"
                        class="required"
                    >

                        <option value="2">N/A</option>
                         
                        <option value="1">ELL Student</option>

                        <option value="0">504 Student</option>
                        

                    </field>
            
                <field 
                    type="textarea"
                    name="medicationTaken"
                    label="Medication taken by child (if any)"
                    row="10"
                    col="5"
                    description="Medication taken by child (if any)"
                    required="true"
                    class="required"
                />

                <field 
                    type="textarea"
                    name="problem"
                    label="Describe the problem the child is having in school"
                    row="10"
                    col="5"
                    description="Describe the problem the child is having in school"
                    required="true"
                    class="required"
                />

                <field 
                    type="radio"
                    name="glass"
                    label="Does the student wear glasses?"
                    description="Does the student wear glasses?"
                    required="true"
                    class="required"
                >

                    <option value="1">Yes</option>

                    <option value="0">No</option>

                </field>

                <field 
                    type="textarea"
                    name="accomplishment"
                    label="What do you want us to accomplish with your student?"
                    row="10"
                    col="5"
                    description="What do you want us to accomplish with your student?"
                    required="true"
                    class="required"
                />

                <field 
                    type="radio"
                    name="attainmentGrade"
                    label="What grades do they feel their student should eventually be capable of attaining?"
                    description="What grades do they feel their student should eventually be capable of attaining?"
                    required="true"
                    class="required"
                >

                    <option value="c">Straight C's</option>

                    <option value="b">Straight B's</option>

                    <option value="a">Straight A's</option>

                </field>
        </fieldsset>
            
        </fields>
        
       
        <fields name="timesheet">
            <fieldsset name="timesheet">
                 <field
                     type="customhidden"
                     size="600"
                    addfieldpath="/administrator/components/com_teachpro/models/fields"
                    name="teacherstartdate"
                    readonly="true"
                    description="start tutoring date"
                    databind="value:$parent.evaluateDate(startDate), attr:{ name:'jform[timesheet][&apos;+$index()+&apos;][teacherstartdate]'}"
                    
                />
                 
                 <field
                    type="customhidden"
                    addfieldpath="/administrator/components/com_teachpro/models/fields"
                    name="teacherenddate"
                    readonly="true"
                    description="end tutoring date"
                     databind="value:$parent.evaluateDate(endDate),  attr:{ name:'jform[timesheet][&apos;+$index()+&apos;][teacherenddate]'}"
                   
                />
                 
            </fieldsset>
        </fields>
        
        
         <field
                    type="customhidden"
                    addfieldpath="/administrator/components/com_teachpro/models/fields"
                    name="teacherid"
                    readonly="true"
                    description="teacher selected for tutoring"
                    databind="value:selectedTeacher().id"
                />
         
         
                <field type="customcheckbox"
                addfieldpath="/administrator/components/com_teachpro/models/fields"
                databind="checked:termsofuse"
                name="termsofuse"
                required="true"
                label="Terms Of Use"
                description="Terms of use agreement">
                </field>
       
        
        <field
             type="customtext"
            addfieldpath="/administrator/components/com_teachpro/models/fields"
            name="firstPayment"
            label="First Payment"
            class="firstPayment"
            description="First Payment"
            readonly="true"
            databind="value:firstPayment"
        />
        
        
        
    </fieldset>

</form>
