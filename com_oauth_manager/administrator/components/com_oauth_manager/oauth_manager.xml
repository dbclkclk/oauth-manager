    <authorEmail>support@techstacksolutions.com</authorEmail>
    <authorUrl>http://techstacksolutions.com</authorUrl>
    <version>CVS: 1.0.0</version>
    <description>An Oauth Server frontend. </description>
    
    
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <sql>
            <file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
        </sql>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>oauth_manager.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>services</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <media destination="com_oauth_manager" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <languages folder="languages/site">
        
			<language tag="en-GB">en-GB/en-GB.com_oauth_manager.ini</language>
    </languages>
    <administration>
        <menu img="media/com_oauth_manager/images/s_com_oauth_manager.png" >COM_OAUTH_MANAGER</menu>
        <submenu>
            <menu link="option=com_oauth_manager&amp;view=oauthservers" view="oauthservers" img="media/com_oauth_manager/images/s_oauthservers.png" alt="Oauth_manager/Oauthservers">COM_OAUTH_MANAGER_TITLE_OAUTHSERVERS</menu>
        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>oauth_manager.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>services</folder>
            <folder>views</folder>
        </files>
        <languages folder="languages/administrator">
            
			<language tag="en-GB">en-GB/en-GB.com_oauth_manager.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_oauth_manager.sys.ini</language>
        </languages>
    </administration>
    <config>
        <fields name="params">
            <fieldset name="component">
                <field name="save_history" default="0" />
            </fieldset>
        </fields>
    </config>
    <plugins>
        <plugin group="search" plugin="oauth_manager"/>
    </plugins>
    
</extension>
